@model EmpMgr.Models.DailyScrumModel

@{
    ViewData["Title"] = "Uredi daily scrum";
}

<h2>Uredi daily scrum</h2>

<h4>Informacije o unosu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="EmployeeId" />
            <input type="hidden" asp-for="Employee" />
            <input type="hidden" asp-for="ScrumDay" />
            <div class="form-group">
                <label asp-for="TodoToday" class="control-label">Todo danas</label>
                <input asp-for="TodoToday" class="form-control" required="required" />
                <span asp-validation-for="TodoToday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoneYesterday" class="control-label">Done jučer</label>
                <input asp-for="DoneYesterday" class="form-control" required="required" />
                <span asp-validation-for="DoneYesterday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Impediments" class="control-label">Prepreke</label>
                <input asp-for="Impediments" class="form-control" required="required" />
                <span asp-validation-for="Impediments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DailyScrumMeetingArrival" class="control-label">Dolazak na sastanak</label>
                <input asp-for="DailyScrumMeetingArrival" class="form-control" required="required" />
                <span asp-validation-for="DailyScrumMeetingArrival" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spremi" class="btn btn-primary btn-sm" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><i class="fas fa-backward"></i> Povratak na listu</a>
</div>

