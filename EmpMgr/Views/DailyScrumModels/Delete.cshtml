@model EmpMgr.Models.DailyScrumModel

@{
    ViewData["Title"] = "Ukloni daily scrum";
}

<h2>Ukloni daily scrum unos</h2>

<h3>Da li ste sigurni da želite ukloniti unos?</h3>
<div>
    <h4>Informacije o unosu</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-4">
            Datum
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.ScrumDay)
        </dd>
        <dt class = "col-sm-4">
            Todo danas
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.TodoToday)
        </dd>
        <dt class = "col-sm-4">
            Done jučer
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.DoneYesterday)
        </dd>
        <dt class = "col-sm-4">
           Prepreke
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.Impediments)
        </dd>
        <dt class = "col-sm-4">
            Nazočio sastanku
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.AttendedDailyScrumMeeting)
        </dd>
        <dt class = "col-sm-4">
            Dolazak na sastanak
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.DailyScrumMeetingArrival)
        </dd>
        <dt class = "col-sm-4">
            Radnik
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.Employee.Email)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Ukloni" class="btn btn-danger btn-sm" /> |
        <a asp-action="Index"><i class="fas fa-backward"></i> Povratak na listu</a>
    </form>
</div>
